<Page x:Class="notification_gui.AddResourcePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:notification_gui"
      mc:Ignorable="d" 
      d:DesignHeight="330" d:DesignWidth="400"
      Title="AddResourcePage">

    <Border Padding="10">

        <StackPanel>

            <TextBlock Grid.Column="0" Text="Insert Link" FontSize="20"/>
            <TextBox x:Name="tbUrl" Grid.Column="1" Padding="2" Margin="0,10,0,0" TextWrapping="Wrap" Height="150"/>
            <!--Button of Sabmition-->
            <Button x:Name="btnSubmit" Click="BtnSab_Click" Content="Submit" Margin="0,10,0,0" FontSize="30"/>
            <Button x:Name="btnBack" Content="Back" Margin="0,10,0,0" FontSize="30" Click="btnBack_Click"/>
        </StackPanel>
    </Border>
</Page>
